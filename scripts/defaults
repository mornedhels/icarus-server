#!/bin/bash

# Server Settings
SERVER_NAME=${SERVER_NAME:-ICARUS Server}
SERVER_PASSWORD=${SERVER_PASSWORD}
SERVER_ADMIN_PASSWORD=${SERVER_ADMIN_PASSWORD}
SERVER_MAX_PLAYERS=${SERVER_MAX_PLAYERS}
SERVER_PORT=${SERVER_PORT:-17777}
SERVER_QUERYPORT=${SERVER_QUERYPORT:-27015}

SERVER_SHUTDOWN_IF_NOT_JOINED=${SERVER_SHUTDOWN_IF_NOT_JOINED}
SERVER_SHUTDOWN_IF_EMPTY=${SERVER_SHUTDOWN_IF_EMPTY}
SERVER_ALLOW_NON_ADMINS_LAUNCH=${SERVER_ALLOW_NON_ADMINS_LAUNCH}
SERVER_ALLOW_NON_ADMINS_DELETE=${SERVER_ALLOW_NON_ADMINS_DELETE}
SERVER_RESUME_PROSPECT=${SERVER_RESUME_PROSPECT}

# Steam Settings
GAME_BRANCH=${GAME_BRANCH:-public}
ASYNC_TASK_TIMEOUT=${ASYNC_TASK_TIMEOUT:-60}

# MISC
PUID=${PUID:-4711}
PGID=${PGID:-4711}
UPDATE_CRON=${UPDATE_CRON:-*/30 * * * *}
CLEANUP_CRON=${CLEANUP_CRON:-}
CLEANUP_DAYS=$((${CLEANUP_DAYS:-1}*60*24))
CLEANUP_DELETE_BACKUPS=${CLEANUP_DELETE_BACKUPS:-false}
CLEANUP_PRUNE_FOLDER=${CLEANUP_PRUNE_FOLDER:-pruned}
CLEANUP_EXCLUDES=${CLEANUP_EXCLUDES:-}
STEAMCMD_ARGS=${STEAMCMD_ARGS:--beta "$GAME_BRANCH" validate}


